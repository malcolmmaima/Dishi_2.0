<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    tools:context=".View.Activities.SupportPin">

    <com.malcolmmaima.dishi.Controller.Fonts.MyTextView_Roboto_Medium
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:text="SUPPORT PIN"
        android:textColor="#ffffff"
        android:textSize="16dp" />

    <com.malcolmmaima.dishi.Controller.Fonts.MyTextView_Roboto_Regular
        android:id="@+id/title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Enter the support pin"
        android:textColor="#ffffff"
        android:textSize="12dp" />


    <com.malcolmmaima.dishi.Controller.Fonts.MyTextView_Roboto_Regular
        android:id="@+id/title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:text="to login to support dashboard"
        android:textColor="#ffffff"
        android:textSize="12dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pin1"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginRight="18dp"
            android:src="@drawable/ic_circle" />

        <ImageView
            android:id="@+id/pin2"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginRight="18dp"
            android:src="@drawable/ic_circle" />

        <ImageView
            android:id="@+id/pin3"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginRight="18dp"
            android:src="@drawable/ic_circle" />

        <ImageView
            android:id="@+id/pin4"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginRight="0dp"
            android:src="@drawable/ic_circle" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/num1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:background="@drawable/circle1"
            android:clickable="true"
            android:focusableInTouchMode="false"
            android:foreground="?android:attr/selectableItemBackground">

            <com.malcolmmaima.dishi.Controller.Fonts.MyTextView_Roboto_Medium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="1"
                android:textColor="#ffffff"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/num2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:background="@drawable/circle1"
            android:orientation="vertical"
            android:clickable="true"
            android:focusableInTouchMode="false"
            android:foreground="?android:attr/selectableItemBackground">

            <com.malcolmmaima.dishi.Controller.Fonts.MyTextView_Roboto_Medium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="15dp"
                android:text="2"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <com.malcolmmaima.dishi.Controller.Fonts.MyTextView_Roboto_Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="ABC"
                android:textColor="#ffffff"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/num3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle1"
            android:orientation="vertical"
            android:clickable="true"
            android:focusableInTouchMode="false"
            android:foreground="?android:attr/selectableItemBackground">

            <com.malcolmmaima.dishi.Controller.Fonts.MyTextView_Roboto_Medium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="15dp"
                android:text="3"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <com.malcolmmaima.dishi.Controller.Fonts.MyTextView_Roboto_Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="DEF"
                android:textColor="#ffffff"
                android:textSize="10dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/num4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:background="@drawable/circle1"
            android:orientation="vertical"
            android:clickable="true"
            android:focusableInTouchMode="false"
            android:foreground="?android:attr/selectableItemBackground">

            <com.malcolmmaima.dishi.Controller.Fonts.MyTextView_Roboto_Medium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="15dp"
                android:text="4"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <com.malcolmmaima.dishi.Controller.Fonts.MyTextView_Roboto_Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="GHI"
                android:textColor="#ffffff"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/num5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:background="@drawable/circle1"
            android:orientation="vertical"
            android:clickable="true"
            android:focusableInTouchMode="false"
            android:foreground="?android:attr/selectableItemBackground">

            <com.malcolmmaima.dishi.Controller.Fonts.MyTextView_Roboto_Medium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="15dp"
                android:text="5"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <com.malcolmmaima.dishi.Controller.Fonts.MyTextView_Roboto_Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="JKL"
                android:textColor="#ffffff"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/num6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="0dp"
            android:background="@drawable/circle1"
            android:orientation="vertical"
            android:clickable="true"
            android:focusableInTouchMode="false"
            android:foreground="?android:attr/selectableItemBackground">

            <com.malcolmmaima.dishi.Controller.Fonts.MyTextView_Roboto_Medium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="15dp"
                android:text="6"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <com.malcolmmaima.dishi.Controller.Fonts.MyTextView_Roboto_Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="MNO"
                android:textColor="#ffffff"
                android:textSize="10dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/num7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:background="@drawable/circle1"
            android:orientation="vertical"
            android:clickable="true"
            android:focusableInTouchMode="false"
            android:foreground="?android:attr/selectableItemBackground">

            <com.malcolmmaima.dishi.Controller.Fonts.MyTextView_Roboto_Medium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="15dp"
                android:text="7"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <com.malcolmmaima.dishi.Controller.Fonts.MyTextView_Roboto_Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="PQRS"
                android:textColor="#ffffff"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/num8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:background="@drawable/circle1"
            android:orientation="vertical"
            android:clickable="true"
            android:focusableInTouchMode="false"
            android:foreground="?android:attr/selectableItemBackground">

            <com.malcolmmaima.dishi.Controller.Fonts.MyTextView_Roboto_Medium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="15dp"
                android:text="8"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <com.malcolmmaima.dishi.Controller.Fonts.MyTextView_Roboto_Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="TUV"
                android:textColor="#ffffff"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/num9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="0dp"
            android:background="@drawable/circle1"
            android:orientation="vertical"
            android:clickable="true"
            android:focusableInTouchMode="false"
            android:foreground="?android:attr/selectableItemBackground">

            <com.malcolmmaima.dishi.Controller.Fonts.MyTextView_Roboto_Medium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="15dp"
                android:text="9"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <com.malcolmmaima.dishi.Controller.Fonts.MyTextView_Roboto_Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="WXYZ"
                android:textColor="#ffffff"
                android:textSize="10dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/num0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/circle1"
        android:gravity="center"
        android:orientation="vertical"
        android:clickable="true"
        android:focusableInTouchMode="false"
        android:foreground="?android:attr/selectableItemBackground">

        <com.malcolmmaima.dishi.Controller.Fonts.MyTextView_Roboto_Medium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:text="0"
            android:textColor="#ffffff"
            android:textSize="20dp" />
    </LinearLayout>


    <ProgressBar
        android:layout_marginTop="30dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/progressBar"
        android:layout_gravity="center_horizontal"
        android:visibility="visible"/>

</LinearLayout>
