<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackroundWhite"
    tools:context=".View.Activities.ReportAbuse"
    android:id="@+id/parentlayout">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:maxHeight="@dimen/actionBarSize"
        android:background="@color/pureWhite"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionBarSize"
        android:elevation="5dp"
        app:view_shadowDx="10dp"
        app:view_shadowDy="0dp"
        app:view_borderWidth="2dp"
        app:view_borderColor="@color/colorPrimaryDark">

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_below="@id/toolbar"
        android:layout_height="match_parent"
        android:layout_width="fill_parent">

        <LinearLayout
            android:id="@+id/Customer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/empty_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Why do you want to report this?"
                android:fontFamily="sans-serif"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_gravity="left"
                android:layout_margin="15dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="5dp"
                card_view:cardCornerRadius="5dp"
                android:focusableInTouchMode="false"
                card_view:view_shadowDx="2dp"
                card_view:view_shadowDy="0dp"
                card_view:view_borderWidth="2dp"
                card_view:view_borderColor="#ffffff"
                android:focusable="true">

                <RelativeLayout
                    android:id="@+id/option1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:layout_gravity="start"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="It's suspicious or spam"
                        android:fontFamily="sans-serif"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="10dp" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/option1Tick"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp"
                        android:tint="@color/grey"
                        android:src="@drawable/ic_done_white_48dp"
                        />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginTop="65dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="#ACACAC"/>

                <RelativeLayout
                    android:id="@+id/option2"
                    android:layout_marginTop="60dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:layout_gravity="start"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="It displays abusive content"
                        android:fontFamily="sans-serif"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="10dp" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/option2Tick"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp"
                        android:tint="@color/grey"
                        android:src="@drawable/ic_done_white_48dp"
                        />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginTop="130dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="#ACACAC"/>

                <RelativeLayout
                    android:id="@+id/option3"
                    android:layout_marginTop="125dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:layout_gravity="start"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="Copyright infringement"
                        android:fontFamily="sans-serif"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="10dp" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/option3Tick"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp"
                        android:tint="@color/grey"
                        android:src="@drawable/ic_done_white_48dp"
                        />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginTop="190dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="#ACACAC"/>

                <RelativeLayout
                    android:id="@+id/option4"
                    android:layout_marginTop="185dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:layout_gravity="start"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="Other"
                        android:fontFamily="sans-serif"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="10dp" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/option4Tick"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp"
                        android:tint="@color/grey"
                        android:src="@drawable/ic_done_white_48dp"
                        />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <hani.momanii.supernova_emoji_library.Helper.EmojiconEditText
                android:id="@+id/describe"
                android:hint="Describe in more detail (optional)"
                android:background="@drawable/layout_bg"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:maxHeight="200dp"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:paddingRight="20dp"
                android:inputType="textMultiLine"
                android:gravity="left"
                android:shadowRadius="10"
                android:autofillHints="" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/reportBtn"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/login_button"
                android:fontFamily="sans-serif-medium"
                android:text="REPORT"
                android:elevation="8dp"
                android:layout_gravity="center"
                android:textColor="@color/colorBackroundWhite"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
