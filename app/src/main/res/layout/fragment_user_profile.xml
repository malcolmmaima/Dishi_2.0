<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:background="@color/colorBackroundWhite"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/actionBarSize"
    tools:context=".View.Fragments.ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- <ImageView
                android:id="@+id/header_cover_image"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop" /> -->

            <com.alexzh.circleimageview.CircleImageView
                android:id="@+id/user_profile_photo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/profile_circular_border_imageview"
                android:elevation="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/default_profile"
                app:view_borderColor="@color/lightgray"
                app:view_borderWidth="2dp"
                app:view_shadowDx="0dp"
                app:view_shadowDy="0dp"
                app:view_shadowRadius="2dp" />

            <RelativeLayout
                android:id="@+id/profile_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_profile_photo"
                android:elevation="4dp">

                <TextView
                    android:id="@+id/user_profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="loading..."
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/user_profile_short_bio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user_profile_name"
                    android:layout_centerHorizontal="true"
                    android:text="loading..."
                    android:textColor="@color/grey"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/user_profile_short_bio"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/following"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/colorAccent"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/followingTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Following"
                            android:textSize="18sp"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#A9A9A9" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/followers"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/colorAccent"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/followersTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Followers"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>
                <View
                    android:id="@+id/line"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#A9A9A9" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_layout"
                android:layout_marginTop="5dp"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:id="@+id/frame"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal">

                            <ImageButton
                                android:id="@+id/emoji"
                                android:src="@drawable/emoji"
                                android:background="@drawable/layout_bg1"
                                android:layout_width="36dp"
                                android:scaleType="fitCenter"
                                android:padding="5dp"
                                android:elevation="1dp"
                                android:layout_gravity="right|bottom"
                                android:layout_height="40dp" />

                            <hani.momanii.supernova_emoji_library.Helper.EmojiconEditText
                                android:id="@+id/myStatus"
                                android:hint="What's on your mind..."
                                android:background="@drawable/layout_bg"
                                android:textSize="18sp"
                                android:layout_alignParentBottom="true"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxHeight="100dp"
                                android:padding="10dp"
                                android:paddingRight="20dp"
                                android:inputType="textMultiLine"
                                android:minHeight="36dp"
                                android:shadowRadius="10"
                                emojicon:emojiconSize="28sp"
                                android:autofillHints="" />

                        </FrameLayout>

                    <Button
                        android:clickable="true"
                        android:layout_below="@id/frame"
                        android:id="@+id/postStatus"
                        android:layout_gravity="right|center"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_marginRight="5dp"
                        android:shadowRadius="5"
                        android:layout_alignParentRight="true"
                        android:text="Post" />

                    </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_below="@id/card_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/rview"
                    />

                <TextView
                    android:id="@+id/empty_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EMPTY"
                    android:textSize="40dp"
                    android:layout_margin="20dp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_horizontal"
                    android:visibility="gone"/>


            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>